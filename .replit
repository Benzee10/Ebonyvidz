modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["pnpm"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Astro Development Server"

[[workflows.workflow]]
name = "Astro Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36403
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["astro", "preview", "--host", "0.0.0.0", "--port", "5000"]
build = ["pnpm", "run", "build"]
