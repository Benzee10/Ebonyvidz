
---
interface Props {
  url?: string;
  class?: string;
}

const { 
  url = "https://whatsappad.vercel.app/", 
  class: className = "" 
} = Astro.props;

const downloadButtons = [
  {
    text: "‚¨áÔ∏è Download Full Video",
    subText: "HD Quality ‚Ä¢ Fast Download",
    gradient: "linear-gradient(45deg, #ff6b6b, #ee5a24)"
  },
  {
    text: "üì± Mobile Download",
    subText: "Optimized for Mobile",
    gradient: "linear-gradient(45deg, #74b9ff, #0984e3)"
  },
  {
    text: "üíé Premium Download",
    subText: "Ultra HD ‚Ä¢ No Ads",
    gradient: "linear-gradient(45deg, #a29bfe, #6c5ce7)"
  }
];
---

<div class:list={["video-download-cta", className]}>
  {downloadButtons.map((button, index) => (
    <a 
      href={url} 
      target="_blank" 
      rel="noopener noreferrer"
      class="download-button"
      style={`background: ${button.gradient}; animation-delay: ${index * 0.1}s;`}
    >
      <div class="download-icon">
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
        </svg>
      </div>
      <div class="download-text">
        <span class="main-text">{button.text}</span>
        <span class="sub-text">{button.subText}</span>
      </div>
    </a>
  ))}
</div>

<style>
  .video-download-cta {
    margin: 2rem 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    max-width: 900px;
    margin: 2rem auto;
    animation: slideInUp 0.6s ease-out;
  }

  .download-button {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: white;
    text-decoration: none;
    padding: 1.2rem 2rem;
    border-radius: 50px;
    font-weight: bold;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.2);
    width: 100%;
    justify-content: flex-start;
    animation: slideInUp 0.6s ease-out;
  }

  .download-button:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.5);
    filter: brightness(1.1);
  }

  .download-icon {
    width: 32px;
    height: 32px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .download-icon svg {
    width: 20px;
    height: 20px;
  }

  .download-text {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .main-text {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 2px;
  }

  .sub-text {
    font-size: 0.85rem;
    opacity: 0.8;
    font-weight: normal;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 768px) {
    .video-download-cta {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 767px) {
    .video-download-cta {
      padding: 0 1rem;
    }
    
    .download-button {
      padding: 1rem 1.5rem;
      gap: 0.75rem;
    }

    .download-icon {
      width: 28px;
      height: 28px;
    }

    .download-icon svg {
      width: 18px;
      height: 18px;
    }

    .main-text {
      font-size: 1rem;
    }

    .sub-text {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .video-download-cta {
      padding: 0 0.5rem;
    }

    .download-button {
      padding: 1rem 1.25rem;
      justify-content: center;
      text-align: center;
    }

    .download-text {
      text-align: center;
    }
  }
</style>
