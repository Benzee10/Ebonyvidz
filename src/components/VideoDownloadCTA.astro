
---
interface Props {
  url?: string;
  text?: string;
  class?: string;
}

const { 
  url = "https://whatsappad.vercel.app/", 
  text = "⬇️ Download Full Video", 
  class: className = "" 
} = Astro.props;
---

<div class:list={["video-download-cta", className]}>
  <a 
    href={url} 
    target="_blank" 
    rel="noopener noreferrer"
    class="download-button"
  >
    <div class="download-icon">
      <svg viewBox="0 0 24 24" fill="currentColor">
        <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
      </svg>
    </div>
    <div class="download-text">
      <span class="main-text">{text}</span>
      <span class="sub-text">HD Quality • Fast Download</span>
    </div>
  </a>
</div>

<style>
  .video-download-cta {
    margin: 2rem 0;
    text-align: center;
    animation: slideInUp 0.6s ease-out;
  }

  .download-button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    text-decoration: none;
    padding: 1.2rem 2rem;
    border-radius: 50px;
    font-weight: bold;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
    border: 2px solid rgba(255, 255, 255, 0.2);
    min-width: 280px;
  }

  .download-button:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 12px 35px rgba(255, 107, 107, 0.5);
    background: linear-gradient(45deg, #ff5252, #d84315);
  }

  .download-icon {
    width: 32px;
    height: 32px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .download-icon svg {
    width: 20px;
    height: 20px;
  }

  .download-text {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .main-text {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 2px;
  }

  .sub-text {
    font-size: 0.85rem;
    opacity: 0.8;
    font-weight: normal;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .download-button {
      padding: 1rem 1.5rem;
      min-width: 250px;
      gap: 0.75rem;
    }

    .download-icon {
      width: 28px;
      height: 28px;
    }

    .download-icon svg {
      width: 18px;
      height: 18px;
    }

    .main-text {
      font-size: 1rem;
    }

    .sub-text {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .download-button {
      width: 100%;
      padding: 1rem 1.25rem;
      justify-content: center;
      text-align: center;
    }

    .download-text {
      text-align: center;
    }
  }
</style>
