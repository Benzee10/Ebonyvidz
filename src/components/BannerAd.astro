<style>
  .video-banner-container {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .video-banner-link {
    display: block;
    width: 100%;
    max-width: 800px;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .video-banner-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }
  
  .video-banner-image {
    position: relative;
    width: 100%;
    height: 200px;
    background: #000;
  }

  .banner-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .video-banner-link:hover .banner-img {
    transform: scale(1.02);
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(2px);
    opacity: 0;
    transition: all 0.3s ease;
  }

  .video-banner-link:hover .video-overlay {
    opacity: 1;
  }

  .play-button {
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
    flex-shrink: 0;
  }

  .play-button svg {
    width: 24px;
    height: 24px;
    margin-left: 2px;
  }

  .video-text {
    color: white;
    text-align: left;
  }

  .video-title {
    display: block;
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 4px;
  }

  .video-subtitle {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .gradient-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  }
  
  .video-banner-default {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .video-banner-default::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
  }

  .video-banner-link:hover .video-banner-default::before {
    left: 100%;
  }

  .video-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    text-align: left;
    z-index: 1;
    position: relative;
  }

  .video-icon {
    font-size: 3rem;
    flex-shrink: 0;
  }

  .video-info h3 {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0 0 8px 0;
  }

  .video-info p {
    font-size: 1rem;
    margin: 0;
    opacity: 0.9;
  }

  .play-arrow {
    font-size: 2rem;
    animation: pulse 2s infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  
  @media (max-width: 768px) {
    .video-banner-image {
      height: 160px;
    }

    .video-banner-default {
      height: 140px;
    }

    .video-content {
      gap: 1rem;
      padding: 0 1rem;
    }

    .video-icon {
      font-size: 2.5rem;
    }

    .video-info h3 {
      font-size: 1.25rem;
    }

    .video-info p {
      font-size: 0.9rem;
    }

    .play-button {
      width: 50px;
      height: 50px;
    }

    .play-button svg {
      width: 20px;
      height: 20px;
    }

    .video-title {
      font-size: 1.1rem;
    }

    .video-subtitle {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .video-banner-image {
      height: 120px;
    }

    .video-banner-default {
      height: 120px;
    }

    .video-content {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }

    .video-icon {
      font-size: 2rem;
    }

    .video-info h3 {
      font-size: 1.1rem;
    }

    .video-info p {
      font-size: 0.8rem;
    }

    .video-overlay {
      flex-direction: column;
      gap: 0.5rem;
    }

    .video-text {
      text-align: center;
    }
  }
</style>
