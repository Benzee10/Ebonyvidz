
---
import type { CollectionEntry } from "astro:content";
import { getSimilarPosts } from "../utils/similar-posts";

interface Props {
  currentPost: CollectionEntry<"posts">;
}

const { currentPost } = Astro.props;
const similarPosts = await getSimilarPosts(currentPost, 4);
---

{similarPosts.length > 0 && (
  <section class="similar-videos-section">
    <h2 class="section-title">
      <span class="title-icon">ðŸ”¥</span>
      More Videos You Might Like
    </h2>
    
    <div class="similar-videos-grid">
      {similarPosts.map((post) => (
        <div class="video-item">
          <a href={`/posts/${post.slug}/`} class="video-link">
            <div class="video-thumbnail">
              <img 
                src={post.data.image || '/favicon/favicon-light-192.png'} 
                alt={post.data.title}
                loading="lazy"
              />
              {post.data.duration && (
                <div class="duration-badge">{post.data.duration}</div>
              )}
              <div class="play-overlay">
                <svg class="play-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
              <div class="gradient-overlay"></div>
            </div>
            <div class="video-info">
              <h3 class="video-title">{post.data.title}</h3>
              <div class="video-meta">
                {post.data.category && (
                  <span class="video-category">{post.data.category}</span>
                )}
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="video-tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="tag">#{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>

    <div class="cta-section">
      <a 
        href="https://whatsappad.vercel.app/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="premium-cta"
      >
        <div class="cta-content">
          <div class="cta-icon">ðŸŽ¬</div>
          <div class="cta-text">
            <span class="cta-main">Watch Premium Content</span>
            <span class="cta-sub">Unlimited HD videos â€¢ No ads â€¢ Exclusive access</span>
          </div>
          <div class="cta-arrow">â†’</div>
        </div>
      </a>
    </div>
  </section>
)}

<style>
  .similar-videos-section {
    background: #1a1a1a;
    color: white;
    padding: 2rem;
    margin: 2rem 0;
    border-radius: 12px;
    border: 1px solid #333;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: white;
  }

  .title-icon {
    font-size: 1.2rem;
  }

  .similar-videos-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .video-item {
    background: #2a2a2a;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid #333;
  }

  .video-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    border-color: #555;
  }

  .video-link {
    display: block;
    text-decoration: none;
    color: white;
  }

  .video-thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
    background: #000;
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .video-item:hover .video-thumbnail img {
    transform: scale(1.05);
  }

  .duration-badge {
    position: absolute;
    bottom: 8px;
    right: 8px;
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 3px 6px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: bold;
    z-index: 2;
  }

  .play-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
    backdrop-filter: blur(4px);
    z-index: 2;
  }

  .video-item:hover .play-overlay {
    opacity: 1;
    background: rgba(255, 255, 255, 0.3);
  }

  .play-icon {
    width: 16px;
    height: 16px;
    color: white;
    margin-left: 2px;
  }

  .gradient-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .video-item:hover .gradient-overlay {
    opacity: 1;
  }

  .video-info {
    padding: 12px;
  }

  .video-title {
    font-size: 13px;
    font-weight: 500;
    line-height: 1.3;
    margin: 0 0 8px 0;
    color: white;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .video-meta {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .video-category {
    color: #999;
    font-size: 11px;
    font-weight: 500;
    text-transform: capitalize;
  }

  .video-tags {
    display: flex;
    gap: 4px;
    flex-wrap: wrap;
  }

  .tag {
    color: #66b3ff;
    font-size: 10px;
    background: rgba(102, 179, 255, 0.15);
    padding: 2px 4px;
    border-radius: 3px;
  }

  .cta-section {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #333;
  }

  .premium-cta {
    display: block;
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    text-decoration: none;
    padding: 1.5rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(255, 107, 107, 0.2);
  }

  .premium-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 107, 107, 0.4);
  }

  .cta-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cta-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .cta-text {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .cta-main {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 4px;
  }

  .cta-sub {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .cta-arrow {
    font-size: 1.5rem;
    font-weight: bold;
    transition: transform 0.3s ease;
  }

  .premium-cta:hover .cta-arrow {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .similar-videos-section {
      padding: 1.5rem;
      margin: 1.5rem 0;
    }

    .similar-videos-grid {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .section-title {
      font-size: 1.3rem;
    }

    .video-info {
      padding: 10px;
    }

    .video-title {
      font-size: 12px;
    }

    .premium-cta {
      padding: 1.25rem;
    }

    .cta-content {
      gap: 0.75rem;
    }

    .cta-main {
      font-size: 1.1rem;
    }

    .cta-sub {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .similar-videos-section {
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 8px;
    }

    .section-title {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .premium-cta {
      padding: 1rem;
    }

    .cta-icon {
      font-size: 1.5rem;
    }

    .cta-main {
      font-size: 1rem;
    }

    .cta-sub {
      font-size: 0.8rem;
    }
  }
</style>
