
---
interface Props {
  videoUrl?: string;
  thumbnail?: string;
  title?: string;
  duration?: string;
  class?: string;
}

const { videoUrl, thumbnail, title, duration, class: className } = Astro.props;
---

{videoUrl && (
  <div class:list={["video-player-wrapper", className]}>
    <div class="video-container">
      <video 
        controls 
        poster={thumbnail}
        preload="metadata"
        class="video-player"
      >
        <source src={videoUrl} type="video/mp4">
        Your browser does not support the video tag.
      </video>
      
      {(title || duration) && (
        <div class="video-info-overlay">
          {title && <div class="video-title">{title}</div>}
          {duration && <div class="video-duration">ðŸŽ¬ {duration}</div>}
        </div>
      )}
    </div>
  </div>
)}

<style>
  .video-player-wrapper {
    margin: 2rem auto;
    max-width: 800px;
    width: 100%;
  }

  .video-container {
    position: relative;
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    background: #000;
  }

  .video-player {
    width: 100%;
    height: auto;
    max-height: 70vh;
    display: block;
    border-radius: 12px;
  }

  .video-info-overlay {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    border-radius: 8px;
    padding: 0.75rem;
    color: white;
    font-size: 0.875rem;
    pointer-events: none;
  }

  .video-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .video-duration {
    opacity: 0.9;
  }

  /* Hide download button in webkit browsers */
  .video-player::-webkit-media-controls-download-button {
    display: none;
  }

  .video-player::-webkit-media-controls-enclosure {
    overflow: hidden;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .video-player-wrapper {
      margin: 1.5rem auto;
    }

    .video-info-overlay {
      top: 0.75rem;
      left: 0.75rem;
      padding: 0.5rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .video-player-wrapper {
      margin: 1rem 0;
    }

    .video-info-overlay {
      position: static;
      background: rgba(0, 0, 0, 0.9);
      border-radius: 0 0 8px 8px;
      margin-top: -4px;
    }
  }
</style>
