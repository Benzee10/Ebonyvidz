<div id="social-proof-counter" class="social-proof-widget">
  <div class="proof-content">
    <div class="live-indicator">
      <div class="pulse-dot"></div>
      <span>LIVE</span>
    </div>
    <div class="stats">
      <div class="stat">
        <span class="number" id="online-count">247</span>
        <span class="label">online now</span>
      </div>
      <div class="stat">
        <span class="number" id="access-count">1,823</span>
        <span class="label">accessed today</span>
      </div>
    </div>
    <a href="https://whatsappad.vercel.app/" class="join-btn">
      Join Now
    </a>
  </div>
</div>

<style>
  .social-proof-widget {
    position: fixed;
    top: 50%;
    left: 20px;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(10px);
    color: white;
    padding: 1rem;
    border-radius: 15px;
    border: 2px solid #ff6b6b;
    z-index: 1000;
    box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
  }
  
  .proof-content {
    text-align: center;
  }
  
  .live-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    font-weight: bold;
    color: #ff6b6b;
  }
  
  .pulse-dot {
    width: 8px;
    height: 8px;
    background: #ff6b6b;
    border-radius: 50%;
    animation: pulse 1.5s infinite;
  }
  
  .stats {
    margin-bottom: 1rem;
  }
  
  .stat {
    display: flex;
    flex-direction: column;
    margin-bottom: 0.5rem;
  }
  
  .number {
    font-size: 1.5rem;
    font-weight: bold;
    color: #FFD700;
  }
  
  .label {
    font-size: 0.7rem;
    opacity: 0.8;
  }
  
  .join-btn {
    background: linear-gradient(45deg, #ff6b6b, #ee5a24);
    color: white;
    text-decoration: none;
    padding: 0.8rem 1.2rem;
    border-radius: 20px;
    font-weight: bold;
    display: block;
    transition: all 0.3s ease;
  }
  
  .join-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }
  
  @media (max-width: 768px) {
    .social-proof-widget {
      left: 10px;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  function updateCounters() {
    const onlineElement = document.getElementById('online-count');
    const accessElement = document.getElementById('access-count');
    
    if (onlineElement && accessElement) {
      // Simulate live data
      setInterval(() => {
        const baseOnline = 200;
        const variance = Math.floor(Math.random() * 100);
        onlineElement.textContent = baseOnline + variance;
        
        const baseAccess = 1800;
        const accessVariance = Math.floor(Math.random() * 50);
        accessElement.textContent = (baseAccess + accessVariance).toLocaleString();
      }, 3000);
    }
  }
  
  document.addEventListener('DOMContentLoaded', updateCounters);
</script>
</div>
