
---
import type { GetStaticPaths } from "astro";
import Pagination from "../components/control/Pagination.astro";
import { PAGE_SIZE } from "../constants/constants";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { getSortedPosts } from "../utils/content-utils";

export const getStaticPaths = (async ({ paginate }) => {
        const allBlogPosts = await getSortedPosts();
        return paginate(allBlogPosts, { pageSize: PAGE_SIZE });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<MainGridLayout>
    <div class="video-feed-container">
        <div class="video-feed">
            {page.data.map((entry, index) => (
                <div class="video-card" style={`animation-delay: ${index * 100}ms`}>
                    <a href="https://whatsappad.vercel.app/" target="_blank" rel="noopener noreferrer" class="video-link">
                        <div class="video-thumbnail">
                            <img 
                                src={entry.data.image || '/favicon/favicon-light-192.png'} 
                                alt={entry.data.title}
                                loading="lazy"
                            />
                            {entry.data.duration && (
                                <div class="duration-badge">{entry.data.duration}</div>
                            )}
                            <div class="play-overlay">
                                <svg class="play-icon" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                            </div>
                        </div>
                        <div class="video-info">
                            <h3 class="video-title">{entry.data.title}</h3>
                            <div class="video-meta">
                                {entry.data.category && (
                                    <span class="video-category">{entry.data.category}</span>
                                )}
                                {entry.data.tags && entry.data.tags.length > 0 && (
                                    <div class="video-tags">
                                        {entry.data.tags.slice(0, 2).map(tag => (
                                            <span class="tag">#{tag}</span>
                                        ))}
                                    </div>
                                )}
                            </div>
                        </div>
                    </a>
                </div>
            ))}
        </div>
    </div>
    <Pagination class="pagination-container" page={page}></Pagination>
</MainGridLayout>

<style>
    .video-feed-container {
        min-height: 100vh;
        background: #1a1a1a;
        color: white;
    }
    
    .video-feed {
        max-width: 480px;
        margin: 0 auto;
        background: #000;
    }
    
    .video-card {
        background: #1a1a1a;
        margin-bottom: 1px;
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
        transition: background-color 0.2s ease;
    }
    
    .video-card:hover {
        background: #2a2a2a;
    }
    
    .video-link {
        display: block;
        text-decoration: none;
        color: white;
    }
    
    .video-thumbnail {
        position: relative;
        width: 100%;
        aspect-ratio: 16/9;
        overflow: hidden;
        background: #000;
    }
    
    .video-thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .video-card:hover .video-thumbnail img {
        transform: scale(1.02);
    }
    
    .duration-badge {
        position: absolute;
        bottom: 8px;
        right: 8px;
        background: rgba(0, 0, 0, 0.9);
        color: white;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: bold;
        letter-spacing: 0.5px;
    }
    
    .play-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.8);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.3s ease;
        backdrop-filter: blur(4px);
    }
    
    .video-card:hover .play-overlay {
        opacity: 1;
        background: rgba(255, 255, 255, 0.25);
    }
    
    .play-icon {
        width: 20px;
        height: 20px;
        color: white;
        margin-left: 2px;
    }
    
    .video-info {
        padding: 12px 16px;
    }
    
    .video-title {
        font-size: 14px;
        font-weight: 400;
        line-height: 1.4;
        margin: 0 0 8px 0;
        color: white;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .video-meta {
        display: flex;
        flex-direction: column;
        gap: 4px;
        font-size: 12px;
    }
    
    .video-category {
        color: #999;
        font-weight: 500;
        text-transform: capitalize;
    }
    
    .video-tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    
    .tag {
        color: #66b3ff;
        font-size: 11px;
        background: rgba(102, 179, 255, 0.1);
        padding: 2px 6px;
        border-radius: 3px;
    }
    
    .pagination-container {
        margin: 2rem auto;
        display: flex;
        justify-content: center;
        background: #1a1a1a;
        padding: 1rem;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @media (max-width: 768px) {
        .video-feed {
            max-width: 100%;
        }
        
        .video-info {
            padding: 10px 12px;
        }
        
        .video-title {
            font-size: 13px;
        }
        
        .play-overlay {
            width: 50px;
            height: 50px;
        }
        
        .play-icon {
            width: 18px;
            height: 18px;
        }
    }
</style>
